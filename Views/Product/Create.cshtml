@model AMARILLO.Models.Products

@{
    ViewData["Title"] = "Create";
}

<h1>Ingresar Datos</h1>

<h4></h4>
<hr />
<form asp-action="Create" class="w3-container w3-card-4 w3-light-grey w3-text-green w3-margin">
    <h2 class="w3-center">Alumnos De la Universidad SMP</h2>
    
             
            
                <div class="w3-row w3-section">
                    <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-id-card"></i></div>
                    <div class="w3-rest">
                        <input asp-for="id" placeholder="Documento de Identidad" class="w3-input w3-border" />
                    </div>
                </div>

                 <div class="w3-row w3-section">
                    <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-user"></i></div>
                    <div class="w3-rest">
                    <input asp-for="Nombre" placeholder="Nombres completos" class="w3-input w3-border" />
                </div>

               <div class="w3-row w3-section">
                    <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-user"></i></div>
                    <div class="w3-rest">
                        <input asp-for="ApellidoPaterno" placeholder="Apellido Paterno" class="w3-input w3-border" />
                    </div>
                </div>

                  <div class="w3-row w3-section">
                    <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-user"></i></div>
                    <div class="w3-rest">
                        <input asp-for="ApellidoMaterno" placeholder="Apellido Materno" class="w3-input w3-border" />
                    </div>
                </div>


                <div class="w3-row w3-section">
                    <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-book"></i></div>
                    <div class="w3-rest">
                        <input asp-for="Curso" placeholder="Curso" class="w3-input w3-border" />
                    </div>
                </div>
                
                
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-info" />
                </div>
           
      
    <div>
        <a  class="btn btn-info" asp-action="Index">Back to List</a>
    </div>
</form> 
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
